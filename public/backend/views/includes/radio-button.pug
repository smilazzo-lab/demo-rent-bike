mixin radiobutton(validationsel,key,labels,values)
    each i,r in values
        div
            label(for=validationsel) #{labels[r]}
            input(type="radio" id=key name=validationsel value=i)
    <i class="fas fa-check-circle"></i>
    <i class="fas fa-exclamation-circle"></i>
    <small>Error message</small>