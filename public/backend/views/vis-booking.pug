    <div class="form-control">
      
    </div>
    <fieldset>
         <legend>Periodo Noleggo:</legend>
             <div class="form-control">
                <label for="date_ini">Dal:*</label>
                +datepicker("date_ini","date_ini","date_ini")
             </div>
    <div class="form-control">
        <label for="date_fin">Al:*</label>
        +datepicker("date_fin","date_fin","date_fin")
    </div>
   
    </fieldset>
    <fieldset>
         <legend>Cliente:</legend>
    <div class="form-control">
        <label for="surname">Cognome:*</label>
        +textfield("surname","surname","surname")
    </div>
    <div class="form-control">
        <label for="name">Nome:*</label>
        +textfield("name","name","name")
    </div>
    <div >
