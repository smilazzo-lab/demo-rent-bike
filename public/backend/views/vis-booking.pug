.container
    include ./includes/select.pug
    include ./includes/textfield.pug
    include ./includes/lookup-textfield.pug
    include ./includes/datepicker.pug
    include ./includes/datepicker-range.pug
    include ./includes/file-upload.pug
    include ./includes/radio-button.pug
    include ./includes/tasto-annulla.pug
    - let cmbProva = detail['cmbProva'];
    - let callingLink = detail['meta'].callLink;
    .header
        .h2 Booking
    <div id="form" class="form">
    <div class="form-control">
        <label for="booking_uuid">Booking UUID: *</label>
